{
     "compilerOptions": {
          "target": "es5",
          "module": "esnext",
          "lib": ["es6", "dom"],
          "allowJs": true,
          "outDir": "build",
          "rootDir": "src",
          "strict": true,
          "noImplicitAny": true,
          "esModuleInterop": true,
          "resolveJsonModule": true,
          "jsx": "react-jsx",
          "skipLibCheck": true,
          "allowSyntheticDefaultImports": true,
          "forceConsistentCasingInFileNames": true,
          "noFallthroughCasesInSwitch": true,
          "moduleResolution": "node",
          "isolatedModules": true,
          "noEmit": true
     },
     "include": ["src"]
}
